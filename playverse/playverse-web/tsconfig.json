{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",
    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["./*"],

      "@convex": ["../convex/_generated/api"],
      "@convex/_generated/*": ["../convex/_generated/*"],
      "@convex/*": ["../convex/*"],

      "@/convex/*": ["../convex/*"],
        // ⬅️ clave para import "@/convex/_generated/dataModel"
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",

    "../convex/_generated/**/*.d.ts"  // ⬅️ que TS "vea" los tipos de Convex
  ],
  "exclude": ["node_modules"]
}
