{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ðŸ‘‡ importante para que funcionen los "paths"
    "baseUrl": ".",

    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"],

      // ðŸ‘‡ alias a la API generada de Convex (carpeta hermana de playverse-web)
      "@convex": ["../convex/_generated/api"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
